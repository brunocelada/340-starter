<!-- CONTENT HEADING
 Add a h1 element if the page has a title -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>
        
<!-- MESSAGE
 Add the capacity to display a message in the future -->
<%- messages() %>
    
<% if (errors) { %>
    <ul class="notice">
<% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
<% }) %>    
    </ul>
<% } %>
        
<!-- ADD NEW CLASSIFICATION FORM -->
<form id="add-classification-form" action="/inv/add-classification" method="post">
    <label for="classification_name">Classification Name <span class="ast">*</span></label><br>
    <input type="text" name="classification_name" id="classification_name" required pattern="[A-Za-zÀ-ÿ]+" value="<%= locals.classification_name %>"><br>
    <div class="form-indication">
        Name must be alphabetic characters only.
    </div><br>
    <button id="submit-btn" type="submit" form="add-classification-form">Add Classification</button><br>
</form>