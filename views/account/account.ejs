<!-- CONTENT HEADING
Add a h1 element if the page has a title -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>
        
<!-- MESSAGE
 Add the capacity to display a message in the future -->
<%- messages() %>
    
<% if (errors) { %>
    <ul class="notice">
<% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
<% }) %>    
    </ul>
<% } %>
        
<!-- ACCOUNT VIEW -->
<div id="account-view">
<h3>You're logged in</h3>
</div>