<!-- CONTENT HEADING
 Add a h1 element if the page has a title -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>
    
<!-- MESSAGE
 Add the capacity to display a message in the future -->
<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
<% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
<% }) %>    
    </ul>
<% } %>
    
<!-- REGISTER FORM -->
<form id="register-form" action="/account/register" method="post">
    <label for="account_firstname">First name <span class="ast">*</span></label><br>
    <input type="text" name="account_firstname" id="account_firstname" required value="<%= locals.account_firstname %>"><br>
    <label for="account_lastname">Last name <span class="ast">*</span></label><br>
    <input type="text" name="account_lastname" id="account_lastname" required value="<%= locals.account_lastname %>"><br>
    <label for="account_email">Email address <span class="ast">*</span></label><br>
    <input type="email" name="account_email" id="account_email" required value="<%= locals.account_email %>"><br>
    <label for="account_password">Password <span class="ast">*</span></label><br>
    <input type="password" name="account_password" id="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"><br>
    <span id="pswdBtn">Show password</span><br><br>
    <button id="submit-btn" type="submit" form="register-form">REGISTER</button><br><br>
    <div class="form-indication">
        Passwords must be minimum of 12 characters and 
        include 1 capital letter, 1 number and 1 special character.
    </div>
    <div>
        <p>Already have an account?&nbsp;</p><a title="Click to login" href="/account/login">Login</a>
    </div>
</form>

<script src="../../js/show-pswd.js"></script>

